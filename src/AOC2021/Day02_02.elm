parseInput : String -> List Cmd
parseInput =
    String.lines
        >> List.filterMap (String.trim >> parseLine)


type Cmd
    = Forward Int
    | Up Int
    | Down Int


parseLine : String -> Maybe Cmd
parseLine str =
    case String.split " " str of
        "forward" :: ns :: [] ->
            String.toInt ns |> Maybe.map Forward

        "up" :: ns :: [] ->
            String.toInt ns |> Maybe.map Up

        "down" :: ns :: [] ->
            String.toInt ns |> Maybe.map Down

        _ ->
            Nothing


type alias Sub =
    { h : Int, d : Int, a : Int }


computeAnswer =
    parseInput >> List.foldl update { h = 0, d = 0, a = 0 } >> distance


distance : Sub -> Int
distance { h, d } =
    h * d


update : Cmd -> Sub -> Sub
update cmd ({ h, d, a } as sub) =
    case cmd of
        Forward n ->
            { sub | h = h + n, d = d + a * n }

        Up n ->
            { sub | a = a - n }

        Down n ->
            { sub | a = a + n }


